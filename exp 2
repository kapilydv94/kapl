<body>

    <div class="bank-container">
        <h2>My Bank Account</h2>
        <div class="balance" id="balance">$0.00</div>
        <button class="btn btn-deposit" onclick="deposit()">Deposit $100</button>
        <button class="btn btn-withdraw" onclick="withdraw()">Withdraw $50</button>
    </div>

    <script>
        let balance = 0;
        const balanceDisplay = document.getElementById('balance');

        function deposit() {
            balance += 100;
            updateBalance();
        }

        function withdraw() {
            if(balance >= 50) {
                balance -= 50;
            } else {
                alert("Insufficient Balance!");
            }
            updateBalance();
        }

        function updateBalance() {
            balanceDisplay.textContent = `$${balance.toFixed(2)}`;
        }
    </script>

