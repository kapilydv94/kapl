<body>

<div class="container">
    <h2>Library Management</h2>

    <input type="text" id="searchInput" placeholder="Search book..." onkeyup="searchBook()">
    <input type="text" id="bookInput" placeholder="Add new book">
    <button onclick="addBook()">Add Book</button>

    <ul id="bookList">
        <li>JavaScript Basics <button onclick="removeBook(this)">Remove</button></li>
        <li>HTML & CSS Guide <button onclick="removeBook(this)">Remove</button></li>
        <li>React for Beginners <button onclick="removeBook(this)">Remove</button></li>
    </ul>
</div>

<script>
    function addBook() {
        const bookInput = document.getElementById('bookInput');
        const bookName = bookInput.value.trim();

        if (bookName === "") {
            alert("Please enter a book name.");
            return;
        }

        const li = document.createElement('li');
        li.innerHTML = `${bookName} <button onclick="removeBook(this)">Remove</button>`;

        document.getElementById('bookList').appendChild(li);
        bookInput.value = "";
    }

    function removeBook(button) {
        const li = button.parentElement;
        li.remove();
    }

    function searchBook() {
        const filter = document.getElementById('searchInput').value.toLowerCase();
        const lis = document.getElementById('bookList').getElementsByTagName('li');

        Array.from(lis).forEach((li) => {
            const bookName = li.firstChild.textContent.toLowerCase();
            li.style.display = bookName.includes(filter) ? "" : "none";
        });
    }
</script>

</body>
