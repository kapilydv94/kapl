<body>

<div class="container">
    <h2>Product Catalog</h2>

    <select id="categoryFilter">
        <option value="all">All Categories</option>
        <option value="electronics">Electronics</option>
        <option value="clothing">Clothing</option>
        <option value="books">Books</option>
    </select>

    <div class="products" id="productList">
        <div class="product-card" data-category="electronics">
            <h3>Smartphone</h3>
            <p>Category: Electronics</p>
        </div>
        <div class="product-card" data-category="clothing">
            <h3>T-Shirt</h3>
            <p>Category: Clothing</p>
        </div>
        <div class="product-card" data-category="books">
            <h3>JavaScript Book</h3>
            <p>Category: Books</p>
        </div>
        <div class="product-card" data-category="electronics">
            <h3>Laptop</h3>
            <p>Category: Electronics</p>
        </div>
        <div class="product-card" data-category="clothing">
            <h3>Jeans</h3>
            <p>Category: Clothing</p>
        </div>
        <div class="product-card" data-category="books">
            <h3>HTML & CSS Guide</h3>
            <p>Category: Books</p>
        </div>
    </div>
</div>

<script>
    const filterDropdown = document.getElementById('categoryFilter');
    const productList = document.getElementById('productList');
    const products = productList.querySelectorAll('.product-card');

    filterDropdown.addEventListener('change', () => {
        const selectedCategory = filterDropdown.value;

        products.forEach(product => {
            if (selectedCategory === 'all' || product.dataset.category === selectedCategory) {
                product.style.display = 'block';
            } else {
                product.style.display = 'none';
            }
        });
    });
</script>

</body>
