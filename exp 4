<div class="container">
    <h2>Character Counter</h2>
    <textarea id="userInput" placeholder="Type your text here..." oninput="countCharacters()"></textarea>
    <div>Character Count: <span class="count" id="charCount">0</span></div>
</div>

<script>
    function countCharacters() {
        const text = document.getElementById('userInput').value;
        document.getElementById('charCount').textContent = text.length;
    }
</script>

